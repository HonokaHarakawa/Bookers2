<div class=' container'>
  <div class=' row'>
    <div class=' col-md-3'>
      
      <h2>User info</h2>

       <%= attachment_image_tag user, :profile_image, :fill,60,60,fallback: "no_image.jpg" %><br>
       <table>
         <tr>
           <th>name</th><th><%= user.name %></th>
         </tr> 
         <tr>
           <td><strong>introduction</strong></td><td><strong><%= user.introduction %></strong></td>
         </tr>
       </table>
      <%= link_to edit_user_path(user), class:  "btn btn-outline-secondary btn-block" do %>
        <i class=' fas fa-user-cog'></i>
      <% end %>  
      <h2>New book</h2>
      <%= form_with model: book, local:true do |f| %>
      
      <p>title</p>
      <%= f.text_field :title %>
      
      <p>Opinion</p>
      <%= f.text_area :body %>
      
        
      <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
      
</div> 
