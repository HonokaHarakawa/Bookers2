<div class="text-success ">
    <%= flash[:success] %>
</div>

<%= render 'books/list', user: @user,  book: @books %>
  <div class=' col-md-8 offset-md-1'>

    <h2>Book detail</h2>
    
    <table class="table table-striped">
      <tbody>
        <tr>
            <td><%= link_to user_path(@user) do %><%= attachment_image_tag @book.user, :profile_image,:fill,30,30, fallback: "no_image.jpg" %><% end %><br>
            <%= link_to user_path(@user) do %><%= @book.user.name %><% end %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class:"btn btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: '本当に消しますか？'},class:"btn btn-danger" %></td>
            <% end %>
        </tr>
      </tbody>    
    </table>
    </div>
