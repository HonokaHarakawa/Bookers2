<div class="text-success">
  <%= flash[:success] %>
</div>
<%= render 'books/list', user: @user, book: @book %>
    <div class=' col-md-8 offset-md-1'>

    <h2>Books</h2>

    <table class="table table-striped">
      <thead>
        <tr>
         <th colspan></th><th>Title</th><th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% @user.books.each do |book| %>
        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag @user,:profile_image,:fill,30,30, fallback: "no_image.jpg" %>
            <% end %>
          </td>
          <td><%= link_to book_path(book) do %><%= book.title %><% end %></td>
          <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
