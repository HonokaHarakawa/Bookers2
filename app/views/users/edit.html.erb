<div class="container">
  <div class="row">
      <div class="col-lg-5">
<h1>User info</h1>

<% if @user.errors.any? %>
<div class="text-danger">
  <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>
  <% @user.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
  </div>
<% end %>
<%= form_with model:@user, local:true do |f| %>

<h4>Name</h4>
<%= f.text_field :name %>

<h4>Image</h4>
<%= f.attachment_field :profile_image %>

<h4>Introduction</h4>
<%= f.text_field :introduction %>


<%= f.submit 'Update User', class:"btn btn-secondary" %>

<% end %>
</div>
</div>
</div>