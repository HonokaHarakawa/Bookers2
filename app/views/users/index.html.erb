<%= render 'books/list', user: @user, book: @book %>
    <div class=' container  row  col-md-8 offset-md-1'>

    <h2>Users</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>image</th><th>name</th><th colspan></th>
            </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
            <tr>
                <td><%= attachment_image_tag user, :profile_image,:fill,30,30, fallback: "no_image.jpg",size:'30x30' %></td><td><%= user.name %></td>
                <td><%= link_to 'Show', user_path(user) %></td>
            </tr>
        </tbody>
        <% end %>
    </table>
    </div>
